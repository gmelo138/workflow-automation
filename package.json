  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "rimraf dist && NODE_ENV=dev nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm:workflow:db": "NODE_PATH=. typeorm -d dist/workflow/database/datasource.database.js",
    "typeorm:workflow:db:generate": "NODE_PATH=. typeorm migration:create",
    "typeorm:workflow:db:migrate": "npm run build && npm run typeorm:workflow:db -- migration:run",
    "typeorm:workflow:db:seed": "NODE_PATH=. ts-node src/workflow/database/seed.ts",
    "typeorm:workflow:db:setup": "npm run typeorm:workflow:db:migrate && npm run typeorm:workflow:db:seed"
  },
  "dependencies": {
    "@bull-board/express": "^6.5.3",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/bull": "^10.2.3",
